    "@app/eslint-config-nest": "workspace:*",
    "@app/prettier-config": "workspace:*",
    "@app/tsconfig": "workspace:*",
    "eslint": "catalog:nestjs",
    "prettier": "catalog:",
    "typescript": "catalog:"
