{
  "name": "nextjs-nestjs-react-native-expo-turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo watch dev --continue",
    "dev:api": "turbo watch dev --filter=@app/api-gateway --filter=@app/auth-microservice --filter=@app/users-microservice",
    "dev:api-gateway": "turbo watch dev -F @app/api-gateway...",
    "dev:auth-microservice": "turbo watch dev -F @app/auth-microservice...",
    "dev:users-microservice": "turbo watch dev -F @app/users-microservice...",
    "dev:webapp": "turbo watch dev -F @app/webapp...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "postinstall": "pnpm lint:ws",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "prettier": "@app/prettier-config",
  "devDependencies": {
    "@app/prettier-config": "workspace:*",
    "@turbo/gen": "^2.1.1",
    "prettier": "catalog:",
    "turbo": "^2.1.1",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=20.16.0"
  }
}
